# SAGE Environment Variables Example
# Copy this file to .env and fill in your values

# Core settings
SAGE_LOG_LEVEL=INFO
SAGE_CACHE_DIR=data/cache
SAGE_DATA_DIR=data
SAGE_MODELS_DIR=data/models

# Optional API keys (all free tiers)
# Get your free API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Get your free API key from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# Porcupine wake word detection (free tier)
# Get your free key from: https://picovoice.ai/
PORCUPINE_ACCESS_KEY=your_porcupine_access_key_here

# Google Speech Recognition (uses free tier by default)
# Only needed for extended usage beyond free limits
GOOGLE_SPEECH_API_KEY=your_google_speech_api_key_here

# Optional: Custom model paths
WHISPER_MODEL_PATH=data/models/whisper
OLLAMA_HOST=http://localhost:11434
YOLO_MODEL_PATH=data/models/yolo

# Development settings
SAGE_DEBUG=false
SAGE_PROFILE=false